<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kiosk_enrollment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    tools:context="org.wso2.emm.agent.KioskEnrollmentActivity">

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonExit"
        android:layout_above="@+id/buttonStart"
        android:layout_toStartOf="@+id/buttonStart"
        android:layout_marginEnd="97dp"
        android:visibility="gone"
        android:layout_marginBottom="205dp" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStart"
        android:layout_above="@+id/buttonLaunch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:visibility="gone"
        android:layout_marginBottom="335dp" />

    <Button
        android:text="Launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLaunch"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_alignStart="@+id/buttonStart" />

    <TextView
        android:text="KIOSK MODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="40sp"
        android:textColor="@color/common_signin_btn_light_text_disabled"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
