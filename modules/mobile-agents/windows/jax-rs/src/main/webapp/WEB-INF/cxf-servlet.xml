<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
         http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
         http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>


    <jaxrs:server id="DiscoveryService_rest" address="/discovery/get">
        <jaxrs:serviceBeans>
            <ref bean="DiscoveryService_rest_bean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>
    <jaxws:endpoint
            id="DiscoveryService"
            implementor="org.wso2.carbon.mdm.mobileservices.windows.discoveryservice.impl.DiscoveryServiceImpl"
            address="/discovery/post"/>
    <jaxws:endpoint
            id="EnrollmentPolicyService"
            implementor="org.wso2.carbon.mdm.mobileservices.windows.xcep.impl.CertificateEnrollmentPolicyServiceImpl"
            address="/certificatepolicy/xcep">
        <jaxws:inInterceptors>
            <ref bean="wss4jInInterceptor1"/>
        </jaxws:inInterceptors>
    </jaxws:endpoint>
    <jaxws:endpoint
            id="CertificateEnrollmentService"
            implementor="org.wso2.carbon.mdm.mobileservices.windows.wstep.impl.CertificateEnrollmentServiceImpl"
            address="/deviceenrolment/wstep">
        <jaxws:inInterceptors>
            <ref bean="wss4jInInterceptor2"/>
        </jaxws:inInterceptors>
        <jaxws:handlers>
            <bean id="serviceOptionsHandler"
                  class="org.wso2.carbon.mdm.mobileservices.windows.wstep.util.MessageHandler"/>
        </jaxws:handlers>
    </jaxws:endpoint>
    <jaxrs:server id="Syncmlinitial" address="/syncml">
        <jaxrs:serviceBeans>
            <ref bean="Syncml_initial_bean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>


    <bean id="DiscoveryService_rest_bean"
          class="org.wso2.carbon.mdm.mobileservices.windows.discoveryservice.impl.DiscoveryServiceImpl"/>
    <bean id="wss4jInInterceptor1" class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
        <property name="properties">
            <map>
                <entry key="action" value="UsernameToken"/>
                <entry key="passwordType" value="PasswordText"/>
                <entry key="isBSPCompliant" value="false"/>
                <entry key="allowNamespaceQualifiedPasswordTypes"
                       value="true"/>
                <entry key="passwordCallbackRef" value-ref="passwordCallback"/>
            </map>
        </property>
    </bean>
    <bean id="wss4jInInterceptor2" class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
        <property name="properties">
            <map>
                <entry key="action" value="UsernameToken"/>
                <entry key="passwordType" value="PasswordText"/>
                <entry key="isBSPCompliant" value="false"/>
                <entry key="allowNamespaceQualifiedPasswordTypes"
                       value="true"/>
                <entry key="passwordCallbackRef" value-ref="passwordCallback"/>
            </map>
        </property>
    </bean>
    <bean id="Syncml_initial_bean" class="org.wso2.carbon.mdm.mobileservices.windows.syncml.impl.SyncmlServiceImpl"/>
    <bean id="passwordCallback" class="org.wso2.carbon.mdm.mobileservices.windows.common.util.PasswordCallbackHandler"/>

</beans>

