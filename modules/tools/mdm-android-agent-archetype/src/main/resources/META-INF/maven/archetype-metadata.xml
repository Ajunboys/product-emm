<archetype-descriptor name="mdm-android-agent">
    <requiredProperties>
        <requiredProperty key="platform">
            <defaultValue>16</defaultValue>
        </requiredProperty>
        <requiredProperty key="clientKey">
            <defaultValue>iwriqwyriqrqro</defaultValue>
        </requiredProperty>
        <requiredProperty key="clientSecret">
            <defaultValue>wrhqwriqwyroiwq</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>assets</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>libs</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>plugins</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>res</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>res</directory>
            <includes>
                <include>**/*.png</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>res</directory>
            <includes>
                <include>**/*.bks</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
