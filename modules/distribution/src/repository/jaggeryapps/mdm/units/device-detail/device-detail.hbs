{{#zone "main"}}
    <div class="row wr-device-board">
        <div class="col-lg-12 wr-secondary-bar">
            <label class="device-id device-select" data-deviceid="{{device.deviceIdentifier}}" data-type="{{device.type}}">
                Device {{device.name}}
                <span class="lbl-device">
                    ({{device.properties.vendor}} {{device.properties.model}})
                </span>
            </label>
        </div>
    </div>

    <div class="row">

        <div class="col-md-12">
            <!-- content -->
            <div class="container col-md-12 col-centered wr-content">
                {{unit "operation-bar"}}
            </div>
            <!-- /content -->
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <!-- content -->
            {{#equal device.type "ios"}}
                <div class="container col-lg-10 wr-stats-board">

                    <div class="col-md-2">
                        <div class="row">
                            <img src="{{self.publicURL}}/img/device_icons/{{device.type}}.png" style="width:200px" />
                        </div>
                        <div class="row ast-desc">
                            <div class="ast-device-desc"><b>Device:</b> {{device.properties.vendor}} {{device.properties.model}}</div>
                            <div class="ast-device-desc"><b>Model:</b>  {{device.properties.model}}</div>
                            <div class="ast-device-desc"><b>IMEI:</b>  {{device.properties.IMEI}}</div>
                            <div class="ast-device-desc"><b>UDID:</b>  {{device.properties.DEVICE_INFO.UDID}}</div>
                            <div class="ast-device-desc"><b>Phone Number:</b>  {{device.properties.DEVICE_INFO.PhoneNumber}}</div>
                        </div>
                    </div>

                    <div class="col-lg-10 tiles">

                        <!-- device summary -->
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="col-lg-4">
                                    <div class="wr-stats-board-tile">
                                        <div class="tile-name">BATTERY</div>
                                        <div>
                                            <div class="tile-icon"><i class="fw fw-battery"></i></div>
                                            <div class="tile-stats">{{device.properties.DEVICE_INFO.BatteryLevel}}%</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="wr-stats-board-tile">
                                        <div class="tile-name">STORAGE</div>
                                        <div>
                                            <div class="tile-icon"><i class="fw fw-hdd"></i></div>
                                            <div class="tile-stats">{{device.properties.DEVICE_INFO.DeviceCapacityPercentage}}%<span class="tile-stats-free">{{device.properties.DEVICE_INFO.DeviceCapacityUsed}} GB Free</span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <!-- /device summary -->

                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                            <!-- device location -->
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h2 class="sub-title panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Device Location</a></h2>
                                </div>
                                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                    <p>Not available yet</p>
                                    <div class="panel-body">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d31685.790279428384!2d79.85860875927737!3d6.923585351516181!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2slk!4v1426479547647" width="680" height="450" frameborder="0" style="border:0"></iframe>
                                    </div>
                                </div>
                            </div>
                            <!-- /device location -->

                            <!-- policies -->
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingTwo">
                                    <h2 class="sub-title panel-title"><a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Policies</a></h2>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                    <div class="panel-body">
                                        <p>Not available yet</p>
                                    </div>
                                </div>
                            </div>
                            <!-- /policies -->

                            <!-- installed applications -->
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingThree">
                                    <h2 class="sub-title panel-title"><a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Installed Applications</a></h2>
                                </div>
                                <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                    <div class="panel-body">
                                        <p>Not available yet</p>
                                        <div class="wr-app-listing"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- /installed applications -->

                        </div>

                    </div>

                </div>
            {{/equal}}
            {{#equal device.type "android"}}
                <div class="container col-lg-10 wr-stats-board">

                    <div class="col-md-2">
                        <div class="row">
                            <img src="{{self.publicURL}}/img/device_icons/{{device.type}}.png" style="width:200px" />
                        </div>
                        <div class="row ast-desc">
                            <div class="ast-device-desc"><b>Device:</b> {{device.properties.vendor}} {{device.properties.model}}</div>
                            <div class="ast-device-desc"><b>Model:</b>  {{device.properties.model}}</div>
                            <div class="ast-device-desc"><b>IMEI:</b>  {{device.properties.imei}}</div>
