                        <label class="control-label col-sm-4" for="bundleId">Bundle ID</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control operationDataKeys col-sm-8" id="bundleId" data-key="bundleId" placeholder="Enter Bundle ID">
                        </div>
                    </div>

                </div>
            </div>
            <div class="buttons">
                <a href="javascript:runOperation('{{features.REMOVE_APPLICATION.featureName}}')" class="btn-operations">Uninstall</a>
                <a href="javascript:hidePopup()" class="btn-operations">Cancel</a>
            </div>
        </div>
        <a href="javascript:operationSelect('{{features.CELLULAR.featureName}}')"><i class="wso2icon wso2-camera"></i><span>Configure Cellular</span></a>
        <div class="operation" data-operation="{{features.CELLULAR.featureName}}">
            <div class="content operationData" data-operation="{{features.CELLULAR.featureName}}">
                <p>Configure Cellular</p>
                <div class="form-horizontal col-centered col-sm-4">
