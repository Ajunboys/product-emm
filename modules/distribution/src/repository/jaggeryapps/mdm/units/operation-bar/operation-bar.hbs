                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="bundleId">Bundle ID</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control operationDataKeys col-sm-8" id="bundleId" data-key="bundleId" placeholder="Enter Bundle ID">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="bundleId">Remove App upon dis-enrollment</label>
                        <div class="col-sm-8">
                            <input type="checkbox" class="pull-left operationDataKeys" id="appRemoval" data-key="appRemoval" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="bundleId">Prevent backup of App data</label>
                        <div class="col-sm-8">
                            <input type="checkbox" class="pull-left operationDataKeys" id="backupData" data-key="backupData" >
                        </div>
                    </div>
                </div>
            </div>
            <div class="buttons">
                <a href="javascript:runOperation('{{features.INSTALL_ENTERPRISE_APPLICATION.featureName}}')" class="btn-operations">Install</a>
                <a href="javascript:hidePopup()" class="btn-operations">Cancel</a>
            </div>
        </div>
        <a href="javascript:operationSelect('{{features.REMOVE_APPLICATION.featureName}}')"><i class="wso2icon wso2-camera"></i><span>Uninstall App</span></a>
        <div class="operation" data-operation="{{features.REMOVE_APPLICATION.featureName}}">
