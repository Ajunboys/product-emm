{{layout "fluid"}}

{{#zone "topCss"}}
    <link rel="stylesheet" href="{{self.publicURL}}/less/login-page.css">
{{/zone}}

{{#zone "content"}}
    <div class="row">
        <div class="col-sm-7 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="text-center login-title">{{#defineZone "signInTitle"}}Sign in{{/defineZone}}</h1>
                </div>
                <div class="panel-body">
                    {{unit "login-input"}}
                </div>
            </div>
        </div>
    </div>
{{/zone}}
