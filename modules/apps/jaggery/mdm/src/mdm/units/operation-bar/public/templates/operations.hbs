<div id="errorOperations" class="operation">
    <div class="content">
        <div class="row">
            <div class="col-lg-5 col-md-6 col-centered">
                <h3>
                    <span class="fw-stack">
                        <i class="fw fw-ring fw-stack-2x"></i>
                        <i class="fw fw-error fw-stack-1x"></i>
                    </span>
                    Operation cannot be performed !
                </h3>
                <h4>
                    Please select a device or a list of devices to perform an operation.
                </h4>
                <div class="buttons">
                    <a href="javascript:hidePopup()" class="btn-operations">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{{#each features}}
    <a href="javascript:operationSelect('{{code}}')">
        <i class="fw {{icon}}"></i>
        <span>{{name}}</span>
    </a>
    <div class="operation" data-operation-code="{{code}}">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>
                        <span class="fw-stack">
                            <i class="fw fw-ring fw-stack-2x"></i>
                            <i class="fw {{icon}} fw-stack-1x"></i>
                        </span>
                        {{#equal code "NOTIFICATION"}}
                            Compose Message
                        {{/equal}}
                        {{#equal code "CHANGE_LOCK_CODE"}}
                            Change Lockcode
                        {{/equal}}
                        {{#unequal code "NOTIFICATION"}}
                            Do you want perform "{{name}}" operation on selected device(s)?
                            <!-- Are you sure you want to perform the below operation on the selected devices ?-->
                        {{/unequal}}
                    </h3>
                    {{#equal code "NOTIFICATION"}}
                        <h4>
                            Type your message below to send that to all the selected devices.<br>
                        </h4>
                        <div>
                            <textarea class="form-control operationDataKeys" id="message" data-key="message"></textarea>
                        </div>
                    {{/equal}}
                    {{#equal code "CHANGE_LOCK_CODE"}}
                        <input type="text" class="form-control operationDataKeys" id="lockcode" data-key="lockCode" placeholder="Enter Lockcode" />
                    {{/equal}}
                    {{#equal code "BUZZER"}}
                        <input type="checkbox" class="form-control operationDataKeys" id="buzzer" data-key="enableBuzzer" />
                    {{/equal}}
                    <div class="buttons">
                        <a href="javascript:runOperation('{{code}}')" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="javascript:hidePopup()" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
<br class="c-both" />