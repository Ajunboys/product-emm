{{#zone "main"}}
    <div class="row wr-device-board">
        <div class="col-lg-12 wr-secondary-bar">
            <span class="page-sub-title">
                &nbsp;&nbsp;Policy List by priority order
            </span>
        </div>
    </div>
    <!-- content -->
    <div class="container-fluid">
        <table class="table table-striped table-hover list-table display responsive nowrap data-table table-selectable grid-view" id="policy-grid">
            <thead>
            <tr class="sort-row">
                <th></th>
                <th></th>
                <th>By Platform</th>
                <th>By Ownership Type</th>
                <th>By Role</th>
                <th>By User</th>
                <th>By Compliance Type</th>
                <th></th>
            </tr>
            <tr class="filter-row filter-box">
                <th></th>
                <th></th>
                <th data-for="By Platform" class="select-filter"></th>
                <th data-for="By Ownership Type" class="select-filter"></th>
                <th data-for="By Role" class="select-filter"></th>
                <th data-for="By User" class="text-filter"></th>
                <th data-for="By Compliance Type" class="select-filter"></th>
                <th></th>
            </tr>
            <tr class="bulk-action-row">
                <th colspan="8">
                    <ul class="tiles">
                        <li class="square">
                            <a href="#" data-click-event="remove-form" class="btn square-element policy-remove-link" data-toggle="modal" data-target="#modalDemo">
                                    <span class="icon fw-stack">
                                        <i class="fw fw-ring fw-stack-2x"></i>
                                        <i class="fw fw-delete fw-stack-1x"></i>
                                    </span>
                                Remove
                            </a>
                        </li>
                    </ul>
                </th>
            </tr>
            </thead>

            <tbody>
            {{#each policyListToView}}
                <tr data-type="selectable" data-id="{{id}}">
                    <td class="remove-padding icon-only content-fill">
                        <div class="thumbnail icon">
                            {{#equal platform "android"}}
                                <i class="square-element text fw fw-android"></i>
                            {{/equal}}
                            {{#equal platform "ios"}}
                                <i class="square-element text fw fw-apple"></i>
                            {{/equal}}
                        </div>
                    </td>
                    <td class="fade-edge" data-search="{{name}}" data-display="{{name}}">
                        <h4>{{name}}</h4>
                        <div>({{platform}})</div>
                    </td>
                    <td class="fade-edge remove-padding-top" data-search="{{platform}}" data-display="{{platform}}"></td>
                    <td class="fade-edge remove-padding-top" data-search="{{ownershipType}}" data-display="{{ownershipType}}" data-grid-label="Ownership">{{ownershipType}}</td>
                    <td class="fade-edge remove-padding-top" data-search="{{roles}}" data-display="{{roles}}" data-grid-label="Role(s)">{{roles}}</td>
                    <td class="fade-edge remove-padding-top" data-search="{{users}}" data-display="{{users}}" data-grid-label="User(s)">{{users}}</td>
                    <td class="fade-edge remove-padding-top" data-search="{{compliance}}" data-display="{{compliance}}" data-grid-label="Compliance">{{compliance}}</td>
                    <td class="text-right content-fill text-left-on-grid-view no-wrap">
                        <a href="#" data-id="{{id}}" data-click-event="remove-form" class="btn padding-reduce-on-grid-view policy-view-link">
                            <span class="fw-stack">
                                <i class="fw fw-ring fw-stack-2x"></i>
                                <i class="fw fw-view fw-stack-1x"></i>
                            </span>
                            <span class="hidden-xs hidden-on-grid-view">View</span>
                        </a>
                        <a href="#" data-id="{{id}}" data-click-event="remove-form" class="btn padding-reduce-on-grid-view policy-update-link">
                            <span class="fw-stack">
                                <i class="fw fw-ring fw-stack-2x"></i>
                                <i class="fw fw-settings fw-stack-1x"></i>
                            </span>
                            <span class="hidden-xs hidden-on-grid-view">Re-Configure</span>
                        </a>
                    </td>
                </tr>
            {{/each}}
            <br class="c-both" />
            </tbody>
        </table>
    </div>
    <br class="c-both"/>
    <!-- /content -->

    <div id="content-filter-types" style="display: none">
        <div class="sort-title">Sort By</div>
        <div class="sort-options">
            <a href="#">By Platform<span class="ico-sort-asc"></span></a>
            <a href="#">By Ownership Type</a>
            <a href="#">By Role</a>
            <a href="#">By User</a>
            <a href="#">By Compliance Type</a>
        </div>
    </div>

    <div id="remove-policy-modal-content" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>Do you really want to remove the selected policy(s)?</h3>
                    <div class="buttons">
                        <a href="#" id="remove-policy-yes-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Yes&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                        &nbsp;&nbsp;
                        <a href="#" id="remove-policy-cancel-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="remove-policy-success-content" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>Done. Selected policy was successfully removed.</h3>
                    <div class="buttons">
                        <a href="#" id="remove-policy-success-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="remove-policy-error-content" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>An unexpected error occurred. Please try again later.</h3>
                    <div class="buttons">
                        <a href="#" id="remove-policy-error-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="save-policy-priorities-success-content" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>Done. New Policy priorities were successfully updated.</h3>
                    <div class="buttons">
                        <a href="#" id="save-policy-priorities-success-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="save-policy-priorities-error-content" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>An unexpected error occurred. Please try again later.</h3>
                    <h4 class="message-from-server"></h4>
                    <div class="buttons">
                        <a href="#" id="save-policy-priorities-error-link" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="errorPolicy" class="hide">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>
                    <span class="fw-stack">
                        <i class="fw fw-ring fw-stack-2x"></i>
                        <i class="fw fw-error fw-stack-1x"></i>
                    </span>
                        Operation cannot be performed !
                    </h3>
                    <h4>
                        Please select a policy or a list of policies to remove.
                    </h4>
                    <div class="buttons">
                        <a href="javascript:hidePopup()" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


{{/zone}}
{{#zone "bottomJs"}}
    <script src="{{self.publicURL}}/js/policy-list.js"></script>
{{/zone}}