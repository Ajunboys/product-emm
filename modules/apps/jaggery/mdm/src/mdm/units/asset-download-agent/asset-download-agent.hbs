{{#zone "main"}}
    <div class="row">
        <div class="container col-md-4 wr-text">
            <hr>
            <div class="wr-head"><h2>{{pageHeader}}</h2></div>
            {{#if emmCertificateDownloadURL}}
                If you have not already enrolled this device with WSO2 Enterprise Mobility Manager,
                Please download and install following EMM Certificate and Agent to continue.
            {{else}}
                If you have not already enrolled this device with WSO2 Enterprise Mobility Manager,
                Please download and install following Agent to continue.
            {{/if}}
            {{#if emmCertificateDownloadURL}}
                <div class="wr-buttons">
                    <a href="{{emmCertificateDownloadURL}}" class="btn-download-agent">Download EMM Certificate</a>
                </div>
            {{/if}}
            <div class="wr-buttons">
                <a href="{{agentDownloadURL}}" class="btn-download-agent">Download EMM Agent</a>
            </div>
        </div>
    </div>
{{/zone}}